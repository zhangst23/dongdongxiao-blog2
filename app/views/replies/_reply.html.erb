<% cache([reply, "raw:#{@show_raw}"]) do %>
<%
	floor = reply_counter + 1
%>
<div class="reply<%= ' popular' if reply.popular? %>" data-id="<%= reply.id %>" id="reply<%= floor %>">
  <% if reply.deleted? and !@show_raw %>
	<div class="deleted text-center"><%= floor %><%= t("common.floor") %> <%= t("common.deleted") %></div>
  <% else %>

	<div class="avatar"><%= user_avatar_tag(reply.user, :normal) %></div>
	<div class="infos">
		<div class="info">
			<span class="name">
				<%= user_name_tag(reply.user) %>
			</span>
			<span class="time">
				<a class="reply-floor" href="#reply<%= floor %>">#<%= floor %></a> . <%= timeago(reply.created_at) %>
			</span>
			<span class="opts pull-right">
				<% if !reply.deleted? %>
					<%= likeable_tag(reply, cache: true) %>
					<%= link_to('', edit_list_reply_path(@list, reply), class: "edit fa fa-pencil", 'data-uid' => reply.user_id, title: "ä¿®æ”¹å›å¸–")%>
					<%= link_to('', "#", 'data-floor' => floor, 'data-login' => reply.user_login, title: t("list.reply_this_floor"), class: "btn-reply fa fa-mail-reply") %>
				<% end %>
			</span>
		</div>
		<div class="markdown<%= ' deleted' if reply.deleted? %>">
			<%= raw reply.body_html %>
		</div>
	</div>
  <% end %>
</div>
<% end %>









