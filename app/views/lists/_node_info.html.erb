<% if !node.blank? %>
	<div class="node-info">
		<div class="name">
			<strong><%= node.name %></strong>
			<span class="total">共有 <%= render_node_lists_count(node) %> 个讨论主题</span>
			<div class="pull-right">
				<%= block_node_tag(node) %>
			</div>
		</div>
		<div class="summary">
			<%= sanitize_markdown node.summary_html %>
		</div>
	</div>

<% else %>
	<div class="filter pull-right">
		<span class="l">查看:</span>
		<a href="<%= lists_path %>"<%= " class=active" if action_name == "index" %>>默认</a>
		<a href="<%= popular_lists_path%>" class="popular<%= " active" if action_name == "popular" %>"> <i class="fa fa-diamond"> 优质清单</i> </a> /
    	<a href="<%= recent_topics_path %>" <%= " class=active" if action_name == "recent"  %>>最新创建</a>
	</div>

<% end %>


















